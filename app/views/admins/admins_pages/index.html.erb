<div class="container d-flex flex-column align-items-center" style="width: 75vw">
  <h1>Administration</h1>
  <h3>Your informations</h3>
  <ul>
    <li>Number of your Users : <%= @users.count %></li>
    <li>Nomber of Availabilities : <%= @availabilities.count %></li>
    <li>Nombre of Appointments : <%= @appointments.count %></li>
    <li>Nombre of Services : <%= @services.count %></li>
  </ul>
  <button class="btn btn-success" type="button" data-bs-toggle="collapse" data-bs-target="#apiKey" aria-expanded="false" aria-controls="apiKey">
    Show your API KEY
  </button>
  <div class="collapse" id="apiKey">
    <div class="input-group">
      <input class="form-control my-3 text-black" style="field-sizing: content;" type="text" value=<%= current_admin.api_key.api_key %> aria-label="ApiKey ReadOnly" disabled readonly>
    </div>
  </div>
  <h3 class="text-center mt-5">Last week</h3>
  <div class="row text-center gap-3 justify-content-center">
    <div class="col-12 col-lg-5">
      <h5>Users</h5>
      <%= line_chart @users_charts %>
    </div>
    <div class="col-12 col-lg-5">
      <h5>Appointments</h5>
      <%= line_chart @appointments_charts %>
    </div>
    <div class="col-12 col-lg-5">
      <h5>Services</h5>
      <%= line_chart @services_charts %>
    </div>
    <div class="col-12 col-lg-5">
      <h5>Availabilities</h5>
      <%= line_chart @availabilities_charts %>
    </div>
  </div>
</div>
