<div class="container d-flex flex-column align-items-center" style="width: 75vw">
  <h1 class="text-center">Service administration</h1>
  <ul>
    <li>Total services : <%= @services.count %></li>
  </ul>

<table class="table table-dark table-striped my-5">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Price</th>
      <th scope="col">Time</th>
      <th scope="col">User ID</th>
      <th scope="col">DELETE</th>
    </tr>
  </thead>
  <tbody>
    <% @services.each do |service| %>
      <%= render "service_infos", service: service%>
    <% end %>
  </tbody>
</table>
</div>
