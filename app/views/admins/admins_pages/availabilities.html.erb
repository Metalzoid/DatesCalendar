<div class="container d-flex flex-column align-items-center mt-3" style="width: 75vw" data-controller="list-updater">
  <h1 class="text-center">Availabilities administration</h1>
  <ul>
    <li>Total Availabilities : <%= @availabilities.count %></li>
  </ul>
  <%= render "select_users", users: @users if @users.any? %>
  <table class="table table-dark table-striped my-5">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Start Date</th>
        <th scope="col">End Date</th>
        <th scope="col">Available</th>
        <th scope="col">User ID</th>
        <th scope="col">DELETE</th>
      </tr>
    </thead>
    <tbody data-list-updater-target="list">
      <%= render "availabilities_infos", availabilities: @availabilities%>
    </tbody>
  </table>
</div>
