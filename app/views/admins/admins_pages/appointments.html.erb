<div class="container d-flex flex-column align-items-center" style="width: 75vw">
  <h1 class="text-center">Appointments administration</h1>
  <ul>
    <li>Total appointments : <%= @appointments.count %></li>
  </ul>

<table class="table table-dark table-striped my-5">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Status</th>
      <th scope="col">Start Date</th>
      <th scope="col">End Date</th>
      <th scope="col">Comment</th>
      <th scope="col">Seller comment</th>
      <th scope="col">Price</th>
      <th scope="col">Seller ID</th>
      <th scope="col">Customer ID</th>
      <th scope="col">DELETE</th>
    </tr>
  </thead>
  <tbody>
    <% @appointments.each do |appointment| %>
      <%= render "appointment_infos", appointment: appointment%>
    <% end %>
  </tbody>
</table>
</div>
