#!/usr/bin/env ruby
require "fileutils"
APP_ROOT = File.expand_path("..", __dir__)
def system!(*args)
  system(*args, exception: true)
end

FileUtils.chdir APP_ROOT do
  system! "bin/rails assets:clobber"
  puts "Rails assets clobber done"
  system! "RAILS_ENV=production bin/rails assets:precompile"
  puts "Rails assets precompile done for prod"
end
